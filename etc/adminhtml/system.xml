<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="tappz_tab" translate="label">
            <label>T-appz</label>
        </tab>
        <section id="tappztoken" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Tappz Token Generator</label>
            <tab>tappz_tab</tab>
            <resource>TmobLabs_Tappz::config</resource>
            <group id="tappzusermethod" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <field id="tappzusername" translate="label" type="text" sortOrder="10" showInDefault="1">
                    <label>Tappz User Name</label>
                </field>
                <field id="tappzsecretkey" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Tappz User Token Key</label>
                </field>

            </group>
        </section>
        <section id="tappzpaypal" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Paypal</label>
            <tab>tappz_tab</tab>
            <resource>TmobLabs_Tappz::config</resource>
            <group id="tappzpaypalmethod" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <field id="paypalClientId" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Paypal Client Id</label>
                </field>
                <field id="paypalSecretKey" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Paypal Secret Key</label>
                </field>
                <field id="paypalSandbox" translate="label" type="select" sortOrder="20" showInDefault="1">
                    <label>Sandbox</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="tappzstripe" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Stripe</label>
            <tab>tappz_tab</tab>
            <resource>TmobLabs_Tappz::config</resource>
            <group id="tappzstripemethod" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <field id="stripetestsecret" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Stripe Secret</label>
                </field>
                <field id="stripesecret" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Stripe Test Secret</label>
                </field>
                <field id="stripetest" translate="label" type="select" sortOrder="20" showInDefault="1">
                    <label>Stripe Test</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="tappzcustomer" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Customer Attributes</label>
            <tab>tappz_tab</tab>
            <resource>TmobLabs_Tappz::config</resource>
            <group id="tappzcustomerform" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <field id="tappzcustomerbirthdate" translate="label" type="select" sortOrder="5" showInDefault="1">
                    <label>Birthdate Attribute</label>
                    <source_model>TmobLabs\Tappz\Model\System\Customer</source_model>
                </field>
                <field id="tappzcustomerphone" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Phone Attribute</label>
                    <source_model>TmobLabs\Tappz\Model\System\Customer</source_model>
                </field>
                <field id="tappzcustomeremail" translate="label" type="select" sortOrder="15" showInDefault="1">
